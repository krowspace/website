      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.label "street address" %>
      <%= f.text_field :street %>
    </div>
    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>
    <div class="field">
      <%= f.label :zip %>
      <%= f.text_field :zip %>
    </div>
    <div class="field">
      <%= f.label :active %>
      <br/>
      <%= f.check_box :active %>
      <br/>
    </div>


    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
