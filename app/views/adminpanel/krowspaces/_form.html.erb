	<%= f.label :location %>
	<%= f.text_field :location %>
</div>

<div class="field">
	<%= f.label :seat_number %>
	<%= f.text_field :seat_number %>
</div>
<div class="field">
	<%= f.label :active %>
	<br />
	<%= f.check_box :active %>
	<br />
</div>


<div class="actions">
	<%= f.submit %>
</div>
<% end %>
