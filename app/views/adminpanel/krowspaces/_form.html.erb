<%= form_for krowspace, :url => adminpanel_krowspace_path(krowspace)  do |f| %>
<% if krowspace.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(krowspace.errors.count, "error") %> prohibited this post from being saved:</h2>
	<ul>
		<% krowspace.errors.full_messages.each do |message| %>
		<li>
			<%= message %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="field">
	<%= f.label :name %>
