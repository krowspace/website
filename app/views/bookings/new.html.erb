<h1> Book a Space</h1>

<%= form_tag("/bookings", method: "post", class: "form-horizontal") do %>

    <input type="hidden" name="seat_id" value="<%= @seat.id %>"/>
    <div class="form-group">
      <label class="control-label col-sm-1" for="email">Email:</label>
      <div class="col-sm-2">
        <input type='text' name="email" class="form-control" placeholder="Email Address"/>
      </div>
    </div>
    <div class="row">
      <h3>Booking Details</h3>
      <div class="col-lg-1">
      </div>
      <div class="col-lg-3">
        <img src="http://placehold.it/200x150"/>
      </div>
      <div class="col-lg-6">
        <div class="col-lg-3">
          <%= @seat.id %>
        </div>
        <div class="col-lg-3">
          <%= @seat.krowspace.name %>
        </div>
        <div class="col-lg-12 top7">
          <%= @seat.krowspace.street + ", " + @seat.krowspace.city + ", " + @seat.krowspace.state %>
        </div>
        <div class="col-lg-4">
          <label class="control-label col-sm-1" for="email">From:</label>
          <input class="form-control" name="start_date" id="disabledInput" type="datetime" placeholder="Disabled" value="<%= @from %>" readonly >
        </div>
        <div class="col-lg-4">
          <label class="control-label col-sm-1" for="email">To:</label>
          <input class="form-control" name="end_date" id="disabledInput" type="datetime" placeholder="Disabled" value="<%= @to %>" readonly>
        </div>
      </div>
    </div>

    <div class="row top15">
      <div class="form-group">
        <label class="control-label col-lg-1" for="email">First Name:</label>
        <div class="col-sm-2">
          <input type='text' name="firstName" class="form-control" placeholder="First Name"/>
        </div>
        <label class="control-label col-sm-1" for="email">Last Name:</label>
        <div class="col-sm-2">
          <input type='text' name="lastName" class="form-control" placeholder="Last Name"/>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-1" for="email">Address:</label>
        <div class="col-sm-3">
          <input type='text' name="streetAddress" class="form-control" placeholder="Street Address"/>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-lg-1" for="email">City, State, & Zip:</label>
        <div class="col-sm-2">
          <input type='text' name="city" class="form-control" placeholder="City"/>
        </div>
        <div class="col-sm-1">
          <input type='text' name="state" class="form-control" placeholder="State" maxlength="2"/>
        </div>
        <div class="col-sm-2">
          <input type='text' name="zip" class="form-control" placeholder="Zip"/>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-1">Payment Type:</label>
        <div class="col-sm-2">
          <select name="paymentType" class="form-control" id="paymentType">
            <option value="Visa">Visa</option>
            <option value="AmericanExpress">AmericanExpress</option>
            <option value="Mastercard">MasterCard</option>
            <option value="Discover">Discover</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-1" for="email">Name On Card:</label>
        <div class="col-sm-2">
          <input type='text' name="cardName" class="form-control" placeholder="Name on Card"/>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-1" for="email">Credit Card:</label>
        <div class="col-sm-2">
          <input type='text' name="cardNumber" class="form-control" placeholder="Card Number"/>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-1" for="email">Expiration Date:</label>
        <div class="col-sm-2">
          <input type='text' name="expirationDate" class="form-control" placeholder="Expiration Date"/>
        </div>
        <label class="control-label col-sm-1" for="email">CVV:</label>
        <div class="col-sm-1">
          <input type='text' name="cvv" class="form-control" placeholder="CVV"/>
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-default">
      Continue
    </button>
<% end %>